.side-bar
  .side-bar__username
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path() do
          = icon('far', 'edit',class: 'top-items__icons__edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'top-items__icons__cog')
  .side-bar__grouplist
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .group-message
            = group.show_last_message
